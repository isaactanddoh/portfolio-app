{
  "name": "portfolio-app",
  "version": "1.0.0",
  "description": "Portfolio website",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage --passWithNoTests --coverageReporters=lcov --coverageReporters=text-summary",
    "lint": "eslint .",
    "format": "prettier --write .",
    "security:audit": "npm audit",
    "security:scan": "trivy filesystem .",
    "prepare": "husky install",
    "postinstall": "npx npm-force-resolutions"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.9",
    "npm-force-resolutions": "^0.0.10",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "resolutions": {
    "cross-spawn": "^8.0.0"
  }
}
